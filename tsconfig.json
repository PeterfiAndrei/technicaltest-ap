{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "types": ["@playwright/test", "./playwright-env"]
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "utils/**/*",
    "test-data/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}